<section class="sign form-container">
  <header class="form-header">
    <h1 class="form-title">Welcome Back !</h1>
    <p class="form-subtitle">Enjoy yourself, empty your bladder, and create your account</p>
  </header>

  {{!-- {{#if msg}}
  <p class="message {{msg.status}}">{{msg.text}}</p>
  {{/if}} --}}

  <form method="post" action="/signin" id="form_user">
    <div class="form-item-wrapper flexed-item">
      <label for="pseudo" class="label">nickname</label>
      <input id="pseudo" type="text" name="pseudo" class="input" placeholder="toilett4t0R75"
        required value="toilett4t0R75">
    </div>

      <div class="form-item-wrapper flexed-item">
      <label for="email" class="label">email</label>
      <input id="email" type="email" name="email" class="input" placeholder="albert.biceps@gmail.com"
        required value="yo@gui.com">
    </div>

    <div class="form-item-wrapper flexed-item">
      <label for="password" class="label-ref label">Password</label>
      <input id="password" type="password" name="password" class="input-text input" placeholder="••••••" required
        value="12345">
    </div>

    <button class="button-primary white">Log in !</button>

  </form>
  <p class="form-sub-infos">Don't have an account yet ? <a href="/signup" class="button-link-form">Sign Up</a></p>
</section>