                <li>
                    <label for="input_PMR">PMR access</label>
                    <input id="filter-pmr" name="acces_pmr" type="checkbox" class="filters"/>
                </li>
                <li>
                    <label for="input_sink">Sink</label>
                    <input id="filter-sink" name="lavabo" type="checkbox" class="filters"/>
                </li>
                <li>
                    <label for="input_urinal">No urinal</label>
                    <input id="filter-urinal" name="urinal" type="checkbox" class="filters"/>
                </li>
            </ul>
        </div>

        <div id="list" class="mauve">
            <h3>list</h3>
            <table>
                <tr>
                    <th>arrondissement</th>
                    <th>address</th>
                    <th>baby</th>
                    <th>wahsbin</th>
                    <th>PRM</th>
                    <th>type</th>
                    <th>hours</th>
                    <th>rating</th>
                </tr>
                <tbody id="tbody-list">

                </tbody>
            </table>
        </div>
    </div>
</section>

