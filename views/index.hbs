<section id="main">

    <div class="vert">
        <h2>where should I pee?</h2>
        <div id="map"></div>
        <input id="toilets_batch" type="hidden" value="{{toilets}}">
    </div>

    <div class="flex-container">
        <div id="filters" class="rouge">
            <h3>filter by...</h3>
            <ul id="list-filter">
                <li>
                    <label for="input_arrondissement">Arrondissement / postcode</label>
                    <input id="input_arrondissement" type="text" class="filter-arrondissement" placeholder="ex: 75011"/>
                </li>
                <li>
                    <label for="input_baby">Baby change</label>
                    <input id="filter-baby" name="relais_bebe" type="checkbox" class="filters"/>
