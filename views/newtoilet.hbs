<div>
  <form action="/create-toilet" method="post" class="add-toilet-form" enctype="multipart/form-data"> 
    <h3 class="form-title">Add new restrooms</h3>

    <div class="form-item-wrapper flexed-item">
      <label for="adresse" class="label"> Address </label>
      <input id="adresse" type="text" name="adresse" class="input-text input" placeholder="14 rue Tartempion"
        required value="34 rue frometon">
    </div>

    <div class="form-item-wrapper flexed-item">
        <label for="arrondissement" class="label"> Arrondissement </label>
        <select name="arrondissement" id="arrondissement">
            <option value="">--Please choose an arrondissement--</option>
            <option value="75001">1er</option>
            <option value="75002">2e</option>
            <option value="75003">3e</option>
            <option value="75004">4e</option>
            <option value="75005">5e</option>
            <option value="75006">6e</option>
            <option value="75007">7e</option>
            <option value="75008">8e</option>
            <option value="75009">9e</option>
            <option value="75010">10e</option>
            <option value="75011">11e</option>
            <option value="75012">12e</option>
            <option value="75013">13e</option>
            <option value="75014">14e</option>
            <option value="75015">15e</option>
            <option value="75016">16e sud</option>
            <option value="75116">16e nord</option>
            <option value="75017">17e</option>
            <option value="75018">18e</option>
            <option value="75019">19e</option>
            <option value="75020">20e</option>
        </select>
    </div>

